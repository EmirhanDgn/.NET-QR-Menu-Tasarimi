
@{
    ViewBag.Title = "Başlangıç";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-5 pb-3">
                <h3 class="mb-5 heading-pricing ftco-animate fadeInUp ftco-animated">Başlangıç</h3>
                @foreach (var item in Model)
                {
                    if (item.YemekKategori == 3)
                    {
                        if (item.InStock == 1)
                        {
                            <div class="pricing-entry d-flex ftco-animate fadeInUp ftco-animated">
                                <div class="img" style="background-image: url(@item.UrunResim);"></div>
                                <div class="desc pl-3">
                                    <div class="d-flex text align-items-center">
                                        <h3><span>@item.UrunBaslik</span></h3>
                                        <span class="price">₺@item.UrunFiyat</span>
                                    </div>
                                    <div class="d-block">
                                        <p>@item.UrunAciklama</p>
                                    </div>
                                </div>
                            </div>

                        }

                    }

                }
            </div>


        </div>
    </div>
</section>


